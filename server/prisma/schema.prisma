// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  plan      String   @default("FREE") // FREE, BASIC, PRO
  active    Int      @default(1) // 0=false, 1=true
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Networking / Public Profile
  isPublicProfile Int     @default(0) // 0=false, 1=true
  bio             String? // Short description or "About Me"
  niche           String? // e.g., "Tech, Beauty, Gamer"
  location        String? // e.g., "São Paulo, SP"
  socialInstagram String?
  socialLinkedin  String?
  socialYoutube   String?
  socialTikTok    String?
  socialWhatsapp  String? // For direct contact

  // Address Information
  cep             String?
  street          String?
  number          String?
  complement      String?
  neighborhood    String?
  city            String?
  state           String?
  cpfCnpj         String?

  companies Company[]
  products  Product[]
  shipments Shipment[]
  sales     Sale[]
  transactions FinancialTransaction[]
  
  // Agenda & Scheduling
  scheduledPosts ScheduledPost[]
  tasks          Task[]
  alerts         Alert[]
  insights       Insight[]
  bazarEvents    BazarEvent[]
  
  // Phase 2: Networking Advanced
  opportunities Opportunity[]
  likesGiven    ProfileLike[] @relation("LikesGiven")
  likesReceived ProfileLike[] @relation("LikesReceived")
  
  // Phase 3: Enhanced Financials
  financialGoals    FinancialGoal[]
  recurringExpenses RecurringExpense[]
}

model Opportunity {
  id          String   @id @default(uuid())
  title       String
  description String
  type        String   // COLLAB, JOB, EVENT, PARTNERSHIP
  status      String   @default("OPEN") // OPEN, CLOSED, FILLED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model ProfileLike {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  
  fromUserId  String
  toUserId    String
  
  fromUser    User     @relation("LikesGiven", fields: [fromUserId], references: [id])
  toUser      User     @relation("LikesReceived", fields: [toUserId], references: [id])

  @@unique([fromUserId, toUserId])
}

model FinancialTransaction {
  id          String   @id @default(uuid())
  type        String   // INCOME, EXPENSE
  amount      Decimal
  description String
  name        String?  // Nome/Titulo da transação
  currency    String   @default("BRL") // BRL, USD
  date        DateTime
  category    String   // Vendas, Afiliações, Frete, Compras em Geral, Serviços, Impostos, Outras
  status      String   @default("COMPLETED") // COMPLETED, PENDING, CANCELLED
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  // Relations for Cascading Logic
  relatedId   String?  // ID of the Goal or RecurringExpense
  relatedType String?  // GOAL_FUNDING, RECURRING_EXPENSE

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Company {
  id                String   @id @default(uuid())
  name              String
  contactName       String?
  email             String?
  phone             String?
  country           String?
  website           String?
  contactMethod     String?  // Email, Site, Forms
  contactValue      String?  // Valor correspondente ao método de contato
  partnershipStatus String   @default("Solicitada") // Solicitada, Aceita, Iniciada, Finalizada, Rejeitada
  status            String   @default("ACTIVE") // ACTIVE, INACTIVE, PROSPECT
  rating            Int      @default(0)
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  products Product[]
}

model Product {
  id            String   @id @default(uuid())
  name          String
  category      String
  brand         String?
  model         String?
  marketValue   Decimal?
  primaryColor  String?  // Cor primária do produto
  secondaryColor String? // Cor secundária do produto
  shippingCost  Decimal? // Custo de frete
  status        String   @default("RECEIVED") // RECEIVED, ANALYZING, PUBLISHED, SOLD, SHIPPED
  condition     String?  // NEW, USED, OPEN_BOX
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  companyId     String?
  company       Company? @relation(fields: [companyId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sales          Sale[]
  scheduledPosts ScheduledPost[]

  // Shipping Dimensions
  weight        Float?   // Peso em kg
  height        Float?   // Altura em cm
  width         Float?   // Largura em cm
  length        Float?   // Comprimento em cm
}

model Sale {
  id              String   @id @default(uuid())
  productId       String
  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  // Customer Information
  customerName    String
  customerCpf     String?  // CPF do cliente
  contactChannel  String   // WhatsApp, Discord, Instagram, TikTok, Facebook
  contactValue    String   // Phone, email, or username
  
  // Shipping Address
  cep             String?
  street          String?
  number          String?
  complement      String?
  neighborhood    String?
  city            String?
  state           String?
  
  // Sale Information
  salePrice       Decimal
  saleDate        DateTime @default(now())
  status          String   @default("PENDING") // PENDING, SHIPPED, DELIVERED, CANCELLED
  
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  shipments       Shipment[] // Relação com envios criados a partir desta venda
}

model Shipment {
  id              String   @id @default(uuid())
  userId          String
  saleId          String?  // Vincula envio à venda original
  sale            Sale?    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  
  // Dados do Remetente
  senderName      String?
  senderAddress   String?
  senderCity      String?
  senderState     String?
  senderCep       String?
  senderCpfCnpj   String?
  
  // Dados do Destinatário
  recipientName   String
  recipientAddress String
  recipientCity   String
  recipientState  String
  recipientCep    String
  recipientCpfCnpj String?
  
  // Dados do Pacote
  weight          Float
  height          Float
  width           Float
  length          Float
  declaredValue   Float?
  
  // Dados do Frete
  carrier         String    // PAC, SEDEX, Jadlog, Loggi
  price           Float
  deliveryTime    Int
  
  // Dados do Conteúdo
  contentDescription String?
  contentQuantity    Int      @default(1)
  
  // Metadados
  trackingCode         String?   @unique
  status               String    @default("pending") // pending, shipped, delivered
  labelGenerated       Int   @default(0) // Etiqueta foi gerada? (0=false, 1=true)
  declarationGenerated Int   @default(0) // Declaração de conteúdo foi gerada? (0=false, 1=true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id])
}

model ScheduledPost {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  productId       String?
  product         Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  
  title           String
  caption         String?
  platforms       String   // JSON array: ["Instagram", "TikTok", "YouTube"]
  scheduledFor    DateTime
  status          String   @default("SCHEDULED") // SCHEDULED, PUBLISHED, CANCELLED
  
  mediaUrl        String?  // URL da imagem/vídeo
  mediaType       String?  // IMAGE, VIDEO
  
  publishedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AffiliatePlatform {
  id              String   @id
  userId          String
  name            String
  paymentTermDays Int      @default(30)
  icon            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  earnings        AffiliateEarning[]
}

model AffiliateEarning {
  id              String   @id
  userId          String
  platformId      String
  platform        AffiliatePlatform @relation(fields: [platformId], references: [id])
  amount          Decimal
  requestDate     DateTime
  receiptDate     DateTime // Calculated (requestDate + platform.term)
  status          String   @default("PENDING") // PENDING, PAID
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Task {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  title       String
  description String?
  category    String   // CONTENT, EDITING, RESPOND, OTHER
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH
  status      String   @default("TODO") // TODO, IN_PROGRESS, DONE
  
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Alert {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  type        String   // PRODUCT_ARRIVING, POST_UPCOMING, TASK_DUE, PRODUCT_NO_POST
  title       String
  message     String
  relatedId   String?  // ID do produto/post/tarefa relacionado
  
  isRead      Int      @default(0) // 0=false, 1=true
  createdAt   DateTime @default(now())
}

model BazarEvent {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  title       String
  description String?
  date        DateTime
  location    String?
  status      String   @default("PLANNED") // PLANNED, CONFIRMED, COMPLETED, CANCELLED
  productIds  String   // JSON array of product IDs
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FinancialGoal {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  name          String
  targetAmount  Decimal
  currentAmount Decimal  @default(0)
  deadline      DateTime?
  status        String   @default("ACTIVE") // ACTIVE, COMPLETED, ARCHIVED
  color         String?  // Hex color for UI
  icon          String?  // Icon name
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model RecurringExpense {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  name          String
  amount        Decimal
  currency      String   @default("BRL")
  frequency     String   @default("MONTHLY") // MONTHLY, YEARLY, WEEKLY
  category      String
  active        Int      @default(1) // 0=false, 1=true
  nextDueDate   DateTime?
  autoRenew     Int      @default(1) // 0=false, 1=true
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Insight {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // ALERT, SUGGESTION, INFO
  title     String
  message   String
  level     String   @default("INFO") // HIGH, MEDIUM, LOW, INFO
  isRead    Int      @default(0) // 0=false, 1=true
  createdAt DateTime @default(now())
}
