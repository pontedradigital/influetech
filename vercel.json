{
    "version": 2,
    "builds": [
        {
            "src": "server/src/server.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "server/prisma/schema.prisma",
                    "server/prisma/migrations/**"
                ]
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/src/server.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}