// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  plan      String   @default("FREE") // FREE, BASIC, PRO
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companies Company[]
  products  Product[]
  shipments Shipment[]
}

model Company {
  id                String   @id @default(uuid())
  name              String
  contactName       String?
  email             String?
  phone             String?
  country           String?
  website           String?
  contactMethod     String?  // Email, Site, Forms
  contactValue      String?  // Valor correspondente ao método de contato
  partnershipStatus String   @default("Solicitada") // Solicitada, Aceita, Iniciada, Finalizada, Rejeitada
  status            String   @default("ACTIVE") // ACTIVE, INACTIVE, PROSPECT
  rating            Int      @default(0)
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  products Product[]
}

model Product {
  id            String   @id @default(uuid())
  name          String
  category      String
  brand         String?
  model         String?
  marketValue   Decimal?
  primaryColor  String?  // Cor primária do produto
  secondaryColor String? // Cor secundária do produto
  shippingCost  Decimal? // Custo de frete
  status        String   @default("RECEIVED") // RECEIVED, ANALYZING, PUBLISHED, SOLD, SHIPPED
  condition     String?  // NEW, USED, OPEN_BOX
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  companyId     String?
  company       Company? @relation(fields: [companyId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Shipment {
  id              String   @id @default(uuid())
  userId          String
  
  // Dados do Remetente
  senderName      String
  senderAddress   String
  senderCity      String
  senderState     String
  senderCep       String
  senderCpfCnpj   String?
  
  // Dados do Destinatário
  recipientName   String
  recipientAddress String
  recipientCity   String
  recipientState  String
  recipientCep    String
  recipientCpfCnpj String?
  
  // Dados do Pacote
  weight          Float
  height          Float
  width           Float
  length          Float
  declaredValue   Float?
  
  // Dados do Frete
  carrier         String    // PAC, SEDEX, Jadlog, Loggi
  price           Float
  deliveryTime    Int
  
  // Dados do Conteúdo
  contentDescription String?
  contentQuantity    Int      @default(1)
  
  // Metadados
  trackingCode    String?   @unique
  status          String    @default("pending") // pending, shipped, delivered
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id])
}
